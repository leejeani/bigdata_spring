<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"  
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   <bean id="userOracleDao" class="dao.UserOracleDao"></bean>
   <bean id="userMysqlDao" class="dao.UserMySQLDao"></bean>
   
   <bean id="userBiz" class="biz.UserBiz"
    c:a="aaaa" 
    p:mysql-ref="userMysqlDao"
   >
   </bean>
   
    
   <bean id="productBiz" class="biz.ProductBiz"
   p:oracle-ref="productOracleDao" 
   p:mysql-ref="productMysqlDao"
   >
   </bean>
   <bean id="productMysqlDao" class="dao.ProductOracleDao"></bean>
   <bean id="productOracleDao" class="dao.ProductMySQLDao"></bean>
    
</beans>



